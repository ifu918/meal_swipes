<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <!-- Form html options start -->
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <!-- Form html options end -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          
          <!-- Devise Input for seller start -->
          <div class="form-group">
            <% seller_was_invalid = resource.errors.include?(:seller) %>

            <% seller_class = "form-control" %>

            <% if was_validated %>
              <% if seller_was_invalid %>
                <% seller_class << " is-invalid" %>
              <% else %>
                <% seller_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :seller %>

            <%= f.check_box :seller, class: "#{seller_class} col-sm-2" %>

            <% if seller_was_invalid %>
              <% resource.errors.full_messages_for(:seller).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for seller end -->
          
          <!-- Devise Input for buyer start -->
          <div class="form-group">
            <% buyer_was_invalid = resource.errors.include?(:buyer) %>

            <% buyer_class = "form-control" %>

            <% if was_validated %>
              <% if buyer_was_invalid %>
                <% buyer_class << " is-invalid" %>
              <% else %>
                <% buyer_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :buyer %>

            <%= f.check_box :buyer, class: "#{buyer_class} col-sm-2" %>

            <% if buyer_was_invalid %>
              <% resource.errors.full_messages_for(:buyer).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for buyer end -->
          
          <!-- Devise Input for swipes_available start -->
          <div class="form-group">
            <% swipes_available_was_invalid = resource.errors.include?(:swipes_available) %>

            <% swipes_available_class = "form-control" %>

            <% if was_validated %>
              <% if swipes_available_was_invalid %>
                <% swipes_available_class << " is-invalid" %>
              <% else %>
                <% swipes_available_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :swipes_available %>

            <%= f.number_field :swipes_available, :class => swipes_available_class, :placeholder => "Enter swipes available" %>

            <% if swipes_available_was_invalid %>
              <% resource.errors.full_messages_for(:swipes_available).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for swipes_available end -->
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
