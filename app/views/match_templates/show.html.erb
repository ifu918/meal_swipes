<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Match #<%= @match.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/matches" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link match start -->
      <div class="col">
        <% if current_user == @match.creator %>
          <a href="/matches/<%= @match.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit match
          </a>
        <% end %>
      </div>
      <!-- Edit link match end -->

      <!-- Delete link match start -->
      <div class="col">
        <% if current_user == @match.creator %>
          <a href="/delete_match/<%= @match.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete match
          </a>
        <% end %>
      </div>
      <!-- Delete link match end -->
    </div>

    <dl>
      <dt>
        Seller
      </dt>
      <!-- Display seller start -->
      <dd>
        <%= @match.seller %>
      </dd>
      <!-- Display seller end -->

      <dt>
        Buyer
      </dt>
      <!-- Display buyer start -->
      <dd>
        <%= @match.buyer %>
      </dd>
      <!-- Display buyer end -->

      <dt>
        Dining hall
      </dt>
      <!-- Display dining_hall start -->
      <dd>
        <%= @match.dining_hall %>
      </dd>
      <!-- Display dining_hall end -->

      <dt>
        Price
      </dt>
      <!-- Display price start -->
      <dd>
        <%= @match.price %>
      </dd>
      <!-- Display price end -->

      <dt>
        Meeting time
      </dt>
      <!-- Display meeting_time start -->
      <dd>
        <%= @match.meeting_time %>
      </dd>
      <!-- Display meeting_time end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@match.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@match.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

